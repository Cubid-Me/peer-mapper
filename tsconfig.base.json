{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "ignoreDeprecations": "6.0"
  },
  "exclude": ["node_modules", "dist", ".next", "frontend/.next", "indexer/dist"]
}
